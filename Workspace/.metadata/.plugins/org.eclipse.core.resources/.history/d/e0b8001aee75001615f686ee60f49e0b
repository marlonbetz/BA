
class PairwiseEvaluation(object):
    def __init__(self,x,true,predicted):
        sums = dict()
        for x1,true1,pred1 in zip(x,true,predicted):
            for x2,true2,pred2 in zip(x,true,predicted):
                if true1 == true2 and pred1 == pred2:
                    if "true positives" not in sums:
                        sums["true positives"] =0
                    sums["true positives"]+=1
                if true1 != true2 and pred1 == pred2:
                    if "false positives" not in sums:
                        sums["false positives"] =0
                    sums["false positives"]+=1
                if true1 == true2 and pred1 != pred2:
                    if "false negatives" not in sums:
                        sums["false negatives"] =0
                    sums["false negatives"]+=1
                if true1 != true2 and pred1 != pred2:
                    if "true negatives" not in sums:
                        sums["true negatives"] =0
                    sums["true negatives"]+=1
                