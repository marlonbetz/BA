import numpy as np 
import pickle
import codecs

ars = pickle.load(codecs.open("adjusted_rand_scores.pkl","rb"))
ami = pickle.load(codecs.open("adjusted_mutual_info_scores.pkl","rb"))
hvc =  np.array(pickle.load(codecs.open("homogeneity_completeness_v_measures_scores.pkl","rb")))
n_true =np.array(pickle.load(codecs.open("n_cognate_classes_true_perDataPoint.pkl","rb")))
import matplotlib.pyplot as plt
plt.plot(ars,label="ars")
plt.plot(ami,label="ami")
plt.plot(hvc[:,0],label="h")
plt.plot(hvc[:,1],label="c")
plt.plot(hvc[:,2],label="v")
plt.plot(n_true/100,label="n")
plt.legend()
plt.show()