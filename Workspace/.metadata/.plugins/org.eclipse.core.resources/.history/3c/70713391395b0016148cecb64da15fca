tsne = TSNE(2)
embeddings_tsne = tsne.fit_transform(embeddings_geo)
print("plotting")
import matplotlib.pyplot as plt
cmap = dict((key,np.random.beta(1,1,3)) for key in langs)
for lang,emb in zip(langs,embeddings_tsne):
    plt.annotate(lang,emb,color=cmap[lang])

plt.show()